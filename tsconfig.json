{
  "compilerOptions": {
    "baseUrl": "https://www.royalbine.com",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es7", "es2016", "dom"],
    "sourceMap": true,
    "alwaysStrict": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noResolve": false,
    "allowUnusedLabels": false,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules", "build", "webpack"]
}
